<%= simple_form_for [ @project, @event ], url: project_events_path(@project) do |f| %>
  <%= f.input :date, input_html: {class: "datepicker"} %>
  <%= f.input :location %>
  <%= f.input :capacity, input_html: { type: 'number' } %>
  <%= f.input :information %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: "btn btn-outline-primary"%>
<% end %>
