<% if current_user.admin %>

  <div class="container my-5">
    <% if @projects.count != 0 %>
      <h1 class="page-title">Progetti in corso</h1>
    <% end %>
    <div class="grid-container">
      <% @projects.each do |project| %>
      <div class="card project-card">
        <%= image_tag "sos-spesa", class: 'card-img-top' %>
        <div class="card-body d-flex">
          <h3 class="card-title mr-2 flex-grow-1"><%= project.name.upcase %></h3>
          <%= link_to project_events_path(project) do %>
          <p><i class="fas fa-arrow-circle-right icon-small"></i></p>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

<div class="container-blue form-project d-flex justify-content-between">
  <h1 class="section-title">Crea un nuovo progetto</h1>
  <%= render "form" %>
</div>

<% end %>
