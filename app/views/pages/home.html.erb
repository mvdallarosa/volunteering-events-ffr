<div class="banner-homepage d-flex align-items-start mb-4">
  <div class="container align-items-center d-flex justify-content-between">
    <div>
      <h1 class='page-title'>Diventa volontario con un click.</h1>
      <%= link_to 'ESPLORA GLI EVENTI', projects_path, class: "btn btn-light mt-4" %>
    </div>
  </div>
</div>
<div class="container pt-2">

<% @projects.each do |project| %>
<h1 class="paragraph-title mt-5 mb-3"> <%= project.name %></h1>
  <div class="grid-container">
    <% project.events.each do |event| %>
    <div class="card event-card">
      <div class="card-body">
        <div class="d-flex">
          <div class="flex-grow-1">
            <h4 class="card-title"><%= event.datetime.strftime("%^a, %e %^b") %></h4>
            <p><i class="fas fa-clock"></i> <%= event.datetime.strftime("%H:%M") %></p>
            <p><i class="fas fa-map-marker-alt"></i> <%= event.location == nil ? "n/a" : event.location %></p>
          </div>
          <div class="btn-container">
          <%= link_to project_event_path(project, event) do %>
            <div class="btn btn-xl btn-circle btn-warning"><i class="fas fa-external-link-square-alt"></i></div>
          <% end %>
          </div>
        </div>
        <div class="d-flex">
          <h6 class="fw-bold border-top border-warning pt-3"><%= event.activity == nil ? "n/a" : event.activity %></h6>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>

</div>
