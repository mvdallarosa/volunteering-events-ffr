<div class="d-flex justify-content-center mt-5">
  <div class="form-devise container-blue-center">
    <h1 class="section-title mb-4 text-center">Crea il tuo Account</h1>
    <div class="d-flex justify-content-center">
      <div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true, label: false, input_html: { placeholder:"nome"}, error: 'Perfavore inserisci il tuo nome' %>
          <%= f.input :last_name, required: true, label: false, input_html: { placeholder:"cognome"}, error: 'Perfavore inserisci il tuo cognome' %>
          <%= f.input :phone_number, required: true, label: false, input_html: { placeholder:"numero di telefono"}, error: 'Perfavore inserisci il numero di telefono' %>
          <%= f.input :photo, as: :file, label: false, required: true, label: false, input_html: { placeholder:"foto", class:"photo-input"} %>
          <%= f.input :email, required: true, label: false, input_html: { placeholder:"email"}, error: 'Perfavore inserisci la tua email' %>
          <%= f.input :password, required: true, hint: ("Minimo #{@minimum_password_length} caratteri" if @minimum_password_length), label: false, input_html: { placeholder:"password", autocomplete: "new-password"}, error: 'Perfavore inserisci una password' %>
          <%= f.input :password_confirmation, required: true, label: false, input_html: { placeholder:"conferma password", autocomplete: "new-password"}, error: 'Perfavore reinserisci la tua password' %>
          </div>

          <div class="form-actions btn btn-light btn-circle mt-3">
            <%= f.button :submit, "CREA ACCOUNT" %>
          </div>
        <% end %>
        <div class="d-flex justify-content-center">
          <p class="btn btn-warning" style="color: white !important; text-align: center; margin-top:30px; text-decoration: none;"><%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
  </div>
</div>



